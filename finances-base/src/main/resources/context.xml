<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />

	<context:component-scan base-package="com.morcinek.finance" />

	<bean id="mainFrame" class="com.morcinek.finance.ui.MainFrame"
		init-method="init">
		<property name="title">
			<value>My finance Manager</value>
		</property>
		<property name="contentPane">
			<ref bean="mainPanel" />
		</property>
	</bean>
	<bean id="mainPanel" class="com.morcinek.finance.ui.BoxLayoutPanel"
		init-method="init">
		<property name="axis">
			<value>1</value>
		</property>
		<property name="panelComponents">
			<list>
				<bean id="itemScrollPane" class="javax.swing.JScrollPane">
					<constructor-arg>
						<ref bean="sortableTable" />
					</constructor-arg>
				</bean>
				<bean id="buttonPanel" class="com.morcinek.finance.ui.BoxLayoutPanel"
					init-method="init">
					<property name="axis">
						<!-- "0" corresponds to BoxLayout.X_AXIS -->
						<value>0</value>
					</property>
					<property name="panelComponents">
						<list>
							<!-- <ref bean="deleteButton" /> -->
							<!-- <ref bean="addNewButton" /> -->
							<ref bean="testButton" />
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	
	<bean id="sortableTable" class="com.morcinek.finance.ui.table.SortableTable">
		<property name="model">
			<ref bean="sortableTableModel" />
		</property>
	</bean>
	<bean id="testButton" class="com.morcinek.finance.ui.action.BaseButton">
		<constructor-arg>
			<value>Title2</value>
		</constructor-arg>
		<constructor-arg>
			<ref bean="fileChooserAction" />
		</constructor-arg>
	</bean>
	<bean id="fileChooserAction" class="com.morcinek.finance.ui.FileChooserAction">
		<property name="tableModel">
			<ref bean="sortableTableModel" />
		</property>
	</bean>
	<bean id="parsers" class="java.util.ArrayList">
		<constructor-arg>
			<list value-type="java.lang.String">
				<value>Default</value>
				<value>Account</value>
				<value>Amount</value>
				<value>Currency</value>
				<value>Date</value>
				<value>Transaction</value>
			</list>
		</constructor-arg>
	</bean>
	<bean id="packageName" class="java.lang.String">
		<constructor-arg>
			<value>com.morcinek.finance.parse.objects</value>
		</constructor-arg>
	</bean>
	<bean id="fieldParser" class="com.morcinek.finance.parse.FieldParser">
		<property name="parsers">
			<ref bean="parsers" />
		</property>
	</bean>
</beans>


